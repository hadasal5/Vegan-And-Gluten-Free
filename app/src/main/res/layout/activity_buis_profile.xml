<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:background="@drawable/reka3"
    android:layout_height="match_parent"
    tools:context=".RestProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="2">


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="300dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/buttonreturnToBuisList"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:backgroundTint="#538832"
                        android:gravity="center"
                        android:text="בתי עסק"
                        android:textAlignment="center"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/buttonreturnToMapFromBuis"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#538832"
                        android:gravity="center"
                        android:text="מפה"
                        android:textAlignment="center"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/buttonNavigateB"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#538832"
                        android:gravity="center"
                        android:text="ניווט"
                        android:textAlignment="center"
                        android:textSize="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginTop="80dp"
                        app:cardCornerRadius="12dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/buis_profile_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="130dp"
                        android:layout_marginTop="90dp"
                        android:src="@drawable/profile_image" />

                    <TextView
                        android:id="@+id/buis_name"
                        android:layout_width="412dp"
                        android:layout_height="match_parent"
                        android:text="שם העסק"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buis_address"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:text="כתובת"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buis_desc"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:text="תיאור"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buis_url"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:text="קישור"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buis_phone"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="right"
                        android:gravity="right"
                        android:text="טלפון"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:text="קטגוריות:"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/buis_categories"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:text="קטגוריות"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </GridLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>