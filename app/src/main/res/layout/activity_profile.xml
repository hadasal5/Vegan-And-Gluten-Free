<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reka3"
    android:orientation="vertical"
    android:paddingTop="25dp"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonReturnToMainMenuFromProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text=">"
            android:textAlignment="center"
            android:layout_marginLeft="350dp"
            android:textSize="20sp"
            android:backgroundTint="#538832"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="פרופיל אישי"
            android:textColor="#FFFFFF"
            android:layout_marginRight="60dp"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/profile_image" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="שם משתמש"
            android:layout_marginLeft="80dp"
            android:inputType="textPersonName"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/user_diet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:ems="10"
            android:hint="דיאטה"
            android:inputType="text"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:ems="10"
            android:hint="עיר"
            android:inputType="text"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="מין"
            android:layout_marginLeft="80dp"/>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginBottom="16dp"
            android:text="עדכן פרופיל"
            android:backgroundTint="#538832"/>




    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>